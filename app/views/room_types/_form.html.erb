<%= form_for @room_type do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :hotel_id %><br />
    <%= f.text_field :hotel_id %>
  </p>
  <p><%= f.submit %></p>
<% end %>
