<% title "Room Type" %>

<p>
  <strong>Name:</strong>
  <%= @room_type.name %>
</p>
<p>
  <strong>Description:</strong>
  <%= @room_type.description %>
</p>
<p>
  <strong>Hotel:</strong>
  <%= @room_type.hotel_id %>
</p>

<p>
  <%= room_type.description %>
  <% if can? :update, RoomType %>
    <%= link_to "Edit", edit_room_type_path(@room_type) %> | 
  <% end %>
  <% if can? :destroy, RoomType %>
    <%= link_to "Destroy", @room_type, :confirm => 'Are you sure?', :method => :delete %>
  <% end %>
</p>

