<% title "Room" %>

<p>
  <strong>Price:</strong>
  <%= @room.price %>
</p>
<p>
  <strong>Room Type:</strong>
  <%= @room.room_type_id %>
</p>

<p>
  <% if can? :update, Room%>
    <%= link_to "Edit", edit_room_path(@room) %>
  <% end %>
  <% if can? :destroy, Room%>
    <%= link_to "Destroy", @room, :confirm => 'Are you sure?', :method => :delete %>
  <% end %>
</p>

<%= link_to "Back to Rooms", rooms_path %>
