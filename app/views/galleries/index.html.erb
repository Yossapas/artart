<% title "Galleries" %>

<table>
  <tr>
    <th>Name</th>
    <th>Galleriable</th>
    <th>Galleriable Type</th>
  </tr>
  <% for gallery in @galleries %>
    <tr>
      <td><%= gallery.name %></td>
      <td><%= gallery.galleriable_id %></td>
      <td><%= gallery.galleriable_type %></td>
      <td><%= link_to "Show", gallery %></td>
      <td><%= link_to "Edit", edit_gallery_path(gallery) %></td>
      <td><%= link_to "Destroy", gallery, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Gallery", new_gallery_path %></p>
